<!DOCTYPE html>
<html>
<head>
  <title>TicketscoreCrm</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" href='../../assets/stylesheets/simple-sidebar.css' />
  <%= csrf_meta_tags %>

</head>
<body>
<div id="wrapper">

  <!-- Sidebar -->
  <div id="sidebar-wrapper">
    <ul class="sidebar-nav">
      <li class="sidebar-brand">
        <a href="/">
          <span style="font-size:150%">t</span>icket<span style='color:#a00'><span style="font-size:150%">s</span>core</span>
        </a>
      </li>
      <li>
        <a href="#">Dashboard</a>
      </li>
      <li>
        <a href="#">Service</a>
        <ul>
          <li><a href="#">Queue I</a>
          </li>
          <li><a href="#">Queue II</a>
          </li>
          <li><a href="#">Queue III</a>
          </li>
          <li><a href="#">Queue IV</a>
          </li>
        </ul>
      </li>
      <li>
        <a href="#">Overview</a>
      </li>
      <li>
        <a href="#">Events</a>
      </li>
      <li>
        <a href="#">About</a>
      </li>
      <li>
        <a href="#">Services</a>
      </li>
      <li>
        <a href="#">Contact</a>
      </li>
    </ul>
  </div>
  <!-- /#sidebar-wrapper -->

  <!-- Page Content -->
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <%
             flash.each do |key,value|
               messageType, *messageBody = value.split(/:/) %>

                  <div class="alert alert-<%= messageType%> alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <%= messageBody[0]%>
                  </div>
        <% end %>
          <%= yield %>
        </div>
      </div>
    </div>
  </div>



</div>






</body>
</html>
