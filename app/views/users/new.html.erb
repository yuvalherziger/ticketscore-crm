<h2>Add a new user</h2>
<div class="col-xs-6">
<%= form_for(@user, :html => { :role => 'form', :class => 'form-horizontal'} ) do |form| %>
    <% if @user.errors.any? %>
        <div class="alert alert-danger alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          Please review the below errors:
          <ul>
            <% for message in @user.errors.full_messages %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
      <div class="field form-group">
    <%= form.label :userName, :class => 'col-sm-2 control-label'%>
        <div class="col-sm-10">
    <%= form.text_field :userName, :class => 'form-control', :placeholder => 'e.g. aschmidt' %>
          </div>
  </div>
      <div class="field form-group">
    <%= form.label :email, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
    <%= form.text_field :email, :class => 'form-control', :placeholder => 'e.g. uaschmidt@domain.com' %>
        </div>
  </div>
      <div class="field form-group">
      <%= form.label :password, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
      <%= form.password_field :password, :class => 'form-control', :placeholder => 'Choose a password' %>
        </div>
    </div>
      <div class="field form-group">
      <%= form.label :password_confirmation, :class => 'col-sm-2' do %>
            Repeat it <%end%>
        <div class="col-sm-10">
      <%= form.password_field :password_confirmation, :class => 'form-control', :placeholder => 'Repeat the password' %>
        </div>
    </div>
      <div class="field form-group">
        <%= form.label :role, :class => 'col-sm-2'%>
        <div class="col-sm-10">
      <%= form.collection_select :role, Role.order(:name),:id,:name, include_blank: false, :class => 'form-control' %>
</div>
        </div>
      <div class="actions form-group">

          <input type="button" value="Cancel" class="btn btn-danger" id="cancel-new-user" />
            <script>
              $('#cancel-new-user').click(function(){
                  window.location.href = '/users';
              });
            </script>
          <%= form.submit 'Save User', :class => 'btn btn-info' %>

      </div>

<% end %>
</div>
